<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="320dp"
    android:layout_height="100dp">
    <ImageButton
        android:id="@+id/widget_phone_state_btn"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/widget_phone_state_inactive_selector" />
    <ImageButton
        android:id="@+id/widget_location_btn"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/widget_phone_state_btn"
        android:background="@drawable/widget_location_inactive_selector" />
    <ImageButton
        android:id="@+id/widget_motion_btn"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/widget_location_btn"
        android:background="@drawable/widget_motion_inactive_selector" />
    <ImageButton
        android:id="@+id/widget_ambience_btn"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/widget_motion_btn"
        android:background="@drawable/widget_ambience_inactive_selector" />
    <ImageButton
        android:id="@+id/widget_devices_btn"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/widget_ambience_btn"
        android:background="@drawable/widget_devices_inactive_selector" />
    <ImageView
        android:id="@+id/widget_right"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/widget_devices_btn"
        android:src="@drawable/widget_right" />
</RelativeLayout>
